<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    >

    <ImageView
         android:id="@+id/in_progress"
        android:layout_alignParentLeft="true"
        android:layout_width="7dip"
        android:layout_height="fill_parent"
        android:src="@drawable/green_vertical_line"
        />
    <ImageView
        android:id="@+id/actionOldTrip"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:src="@drawable/ic_action_send"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/oldTripName"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/actionOldTrip"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dip" 
        android:ellipsize="end"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />
    <TextView
        android:id="@+id/oldTripLaunch"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/actionOldTrip"
        android:layout_below="@+id/oldTripName"
        android:layout_alignLeft="@+id/oldTripName"
        android:layout_marginLeft="10dip" 
        />

</RelativeLayout>
